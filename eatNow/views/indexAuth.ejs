<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Yoga Studio Template">
    <meta name="keywords" content="Yoga, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%= title %></title>
    <link rel='icon' href='/images/favicon.ico' class='js-favicon'>
    
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900&display=swap" rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="/stylesheets/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="/stylesheets/flaticon.css" type="text/css">
    <link rel="stylesheet" href="/stylesheets/nice-select.css" type="text/css">
    <link rel="stylesheet" href="/stylesheets/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="/stylesheets/magnific-popup.css" type="text/css">
    <link rel="stylesheet" href="/stylesheets/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="/stylesheets/style.css" type="text/css">
</head>

<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Header Section Begin -->
    <header class="header-section">
        <div class="container-fluid">
            <div class="logo">
                <a href="/users"><img src="/images/logo4.png" alt=""></a>
            </div>
            <nav class="main-menu mobile-menu">
                <ul>
                    <li class="active"><a href="/">Home</a></li>
                    <li><a href="/users/explore?city=<%=city%>">Explore</a></li>
                    <li><a href="#forYou">For You</a></li>
                    <li><a href="#forYourTaste">4Your Tastes</a></li>
                    <li><a href="/users/news">News</a></li>
                    <li><a href="/users/contact">Contact</a></li>
                </ul>
            </nav>
            <div class="header-right">
                <div class="user-access">
                    <a href="/">Logout</a>
                </div>
            </div>
            <div id="mobile-menu-wrap"></div>
        </div>
    </header>
    <!-- Header End -->

    <!-- Hero Section Begin -->
    <section class="hero-section set-bg" data-setbg="/images/penisulaiberica.png"  id="mySection">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="hero-text">
                        <img src="/images/placeholder.png" alt="">
                        <h1 id="city">Iberian Peninsula</h1>
                        <form action='/users' class="filter-search" method='POST'>
                            <div class="category-search">
                                <h5>Price Range</h5>
                                <select class="ca-search" id="elementId" name="priceRange">
                                    <option value="none" selected="selected">None</option>
                                    <option value="$" >$</option>
                                    <option value="$$" >$$</option>
                                    <option value="$$$" >$$$</option>
                                    <option value="$$$$" >$$$$</option>
                                </select>
                            </div>
                            <div class="location-search">
                                <h5>Your Location</h5>
                                <select class="lo-search" id="selectCity" name="city">
                                    <option value="none" selected="selected">None</option>
                                    <option value="Barcelona">Barcelona</option>
                                    <option value="Madrid">Madrid</option>
                                    <option value="Porto">Porto</option>
                                    <option value="Lisbon">Lisbon</option>
                                </select>
                            </div>
                            <p></p>
                            <div class="category-search">
                                <h5>Cuisine Style</h5>
                                <select style="width:385px;height:50px;background-color:transparent;" name="cuisineStyle">
                                    <option value="none" selected="selected">None</option>
                                    <% for (cuisineStyle of cuisineStyles){%>
                                        <option value="<%= cuisineStyle.CuisineStyle %>"><%= cuisineStyle.CuisineStyle %></option>
                                    <% } %>
                                </select>
                            </div>
                            <button type="submit">Search Now</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Hero Section End -->

    <section class="trending-restaurant spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>Restaurants more view in <%= city %></h2>
                        <p>Explore the most wanted in <%= city %></p>
                    </div>
                </div>
            </div>
            <div class="row">
                <%var i=5%>
                <% for (restaurant of restaurantsMoreView){%>
                    <div class="col-lg-6">
                        <div class="trend-item">
                            <div class="trend-pic">
                                <img src="/images/trending/trending-<%= i %>.jpg" alt="">
                                <div class="rating"><%= parseFloat(restaurant.Rating).toFixed(1) %></div>
                            </div>
                            <div class="trend-text">
                                <h4><%= restaurant.Name %></h4>
                                <span><%= restaurant.City %></span>
                                <p> </p>
                                <p> </p>
                                <div class="closed">Open Now</div>
                                <div class="open"><a href="/users/restaurant/<%= restaurant._id %>">Show more details...</a></div>
                            </div>
                            <div class="tic-text">Restaurants</div>
                        </div>
                    </div>
                    <%i = i+1%>
                <% } %>
            </div>
        </div>
    </section>
   
    <% if(restaurantsSpecial.length != 0) {%>
    <hr style="border-top: 1px dotted black;">
        <section class="trending-restaurant spad" id="forYourTaste">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section-title">
                            <h2>Special restaurants that fit your taste</h2>
                            <p>The best places that EatNow have for you</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <%var i=5%>
                    <% for (restaurant of restaurantsSpecial){%>
                        <div class="col-lg-6">
                            <div class="trend-item">
                                <div class="trend-pic">
                                    <img src="/images/trending/trending-<%= i %>.jpg" alt="">
                                    <div class="rating"><%= parseFloat(restaurant.Rating).toFixed(1) %></div>
                                </div>
                                <div class="trend-text">
                                    <h4><%= restaurant.Name.split("-")[0] %></h4>
                                    <span><%= restaurant.City %></span>
                                    <p> </p>
                                    <p> </p>
                                    <div class="closed">Open Now</div>
                                    <div class="open"><a href="/users/restaurant/<%= restaurant._id %>">Show more details...</a></div>
                                </div>
                                <div class="tic-text">Restaurants</div>
                            </div>
                        </div>
                        <%i = i+1%>
                    <% } %>
                </div>
            </div>
        </section>
    <% } %>
    
    <% if(recommendation.length != 0) {%>
        <hr style="border-top: 1px dotted black;">
        <section class="trending-restaurant spad" id="forYou">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section-title">
                            <h2>EatNow recommendations</h2>
                            <p>The best places that EatNow have for you</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <%var i=5%>
                    <% for (restaurant of recommendation){%>
                        <div class="col-lg-6">
                            <div class="trend-item">
                                <div class="trend-pic">
                                    <img src="/images/trending/trending-<%= i %>.jpg" alt="">
                                    <div class="rating"><%= parseFloat(restaurant.Rating).toFixed(1) %></div>
                                </div>
                                <div class="trend-text">
                                    <h4><%= restaurant.Name %></h4>
                                    <span><%= restaurant.City %></span>
                                    <p> </p>
                                    <p> </p>
                                    <div class="closed">Open Now</div>
                                    <div class="open"><a href="/users/restaurant/<%= restaurant._id %>">Show more details...</a></div>
                                </div>
                                <div class="tic-text">Restaurants</div>
                            </div>
                        </div>
                        <%i = i+1%>
                    <% } %>
                </div>
            </div>
        </section>
    <% } %>

    <!-- Categories Section Begin -->
    <section class="categories-section spad">
        <div class="container-fluid">
            <div class="categories-center">
                <div class="categories-item set-bg large-img" data-setbg="/images/categories/cat-1.jpg">
                        <a href="/images/categories/cat-1.jpg" class="img-hover pop-up"><img src="/images/zoom.png" alt=""></a>
                        <div class="categories-text">
                            <h4>Restaurants in <%=city%></h4>
                            <p><%=allRestaurantsCount%> Listings</p>
                            <a href="/users/explore?city=<%=city%>">View All</a>
                        </div>
                    </div>
            </div>
        </div>
    </section>
    <!-- Categories Section End -->

    <!-- Footer Section Begin -->
    <footer class="footer-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <form action="/newsLetters" class="newslatter-form" method="POST">
                        <input name="email" type="text" placeholder="Your email address">
                        <button type="submit">Subscribe to our Newsletter</button>
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-sm-6">
                    <div class="footer-widget">
                        <h4>Usefull Links</h4>
                        <ul>
                            <li>About us</li>
                            <li>Testimonials</li>
                            <li>How it works</li>
                            <li>Create an account</li>
                            <li>Our Services</li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <div class="footer-widget">
                        <h4>Locations</h4>
                        <ul>
                            <li>Iberian Peninsula</li>
                            <li>Porto</li>
                            <li>Lisbon</li>
                            <li>Madrid</li>
                            <li>Barcelona</li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <div class="footer-widget">
                        <h4>Cuisine Styles</h4>
                        <ul>
                            <li>European</li>
                            <li>Portuguese</li>
                            <li>Spanish</li>
                            <li>Asin</li>
                            <li>And much more...</li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <div class="footer-widget">
                        <h4>From the Blog</h4>
                        <div class="single-blog">
                            <div class="blog-pic">
                                <img src="/images/f-blog-1.jpg" alt="">
                            </div>
                            <div class="blog-text">
                                <h6>10 Best clubs in town</h6>
                                <span>March 27, 2019</span>
                            </div>
                        </div>
                        <div class="single-blog">
                            <div class="blog-pic">
                                <img src="/images/f-blog-2.jpg" alt="">
                            </div>
                            <div class="blog-text">
                                <h6>10 Best restaurants in town</h6>
                                <span>March 27, 2019</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row footer-bottom">
                <div class="col-lg-5 order-2 order-lg-1">
                    <div class="copyright"><p class="text-white">
            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
            Copyright &copy;<script>document.write(new Date().getFullYear());</script> All rights reserved | This WebSite is made by <a href="/" target="_blank" >EatFlix</a>
            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
            </p></div>
                </div>
                <div class="col-lg-7 text-center text-lg-right order-1 order-lg-2">
                    <div class="footer-menu">
                        <a href="/users">Home</a>
                        <a href="/users/explore?city=<%= city %>">Explore</a>
                        <a href="#forYou">For You</a>
                        <a href="#forYourTaste">4Your Tastes</a>
                        <a href="/users/news">News</a>
                        <a href="/users/contact">Contact</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Section End -->

    <!-- Js Plugins -->
    <script src="/javascripts/jquery-3.3.1.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
    <script src="/javascripts/jquery.magnific-popup.min.js"></script>
    <script src="/javascripts/jquery.slicknav.js"></script>
    <script src="/javascripts/owl.carousel.min.js"></script>
    <script src="/javascripts/jquery.nice-select.min.js"></script>
    <script src="/javascripts/mixitup.min.js"></script>
    <script src="/javascripts/main.js"></script>
    <script language="javascript">
        $(function(){
            $("#selectCity").on('change', function(){
                if(this.value != 'none') {
                    document.getElementById("city").innerHTML = this.value;
                } else {
                    document.getElementById("city").innerHTML = "Iberian Peninsula";
                }
            })
        });
    </script>
</body>

</html>